<!DOCTYPE html>
<html>

<head>
  <meta charset="UTF-8">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
  <link rel="stylesheet" href="css/chat.css">
  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
  <script type="text/javascript" src="/socket.io/socket.io.js"></script>
</head>

<body>
  <div class="container">

    <div class="row text">
      <div class="col-md-6 offset-md-3 mt-4">
        <div id="loginArea" class="card">
          <div class="card-header">
            <h4 class="h4">Login</h4>
          </div>
          <div class="card-body">
            <div class="form-group">
              <label>Name:</label>
              <input id="inputName" type="text" name="login_name" class="form-control">

              <label>Icon:</label>
              <div id="iconList"></div>
            </div>
          </div>
          <div class="card-footer text-center">
            <button class="btn btn-block btn-primary" id="login">Login</button>
          </div>
        </div>
      </div>
    </div>

    <div id="chatArea" class="row">
      <div class="col-12">
        <div class="row">
          <div class="col-9 text-info">
            <label for="">Hello!</label>
            <span class="userName"></span>
          </div>

          <div class="col-3 text-right">
            <button class="btn btn-sm btn-outline-primary" id="logout">Logout</button>
          </div>
        </div>
        <div class="form-group">
          <textarea type="text" class="form-control mt-3" id="message" placeholder="Message"></textarea>
        </div>
        <div class="form-group">
          <button class="btn btn btn-info rounded-pill" id="send">Send</button>
          <a class="stamp"><img src="images/icon_stamp.png" alt="" width="40"></a>
        </div>
          <div id="stampList"></div>
      </div>

      <div class="col-8">
        <div id="myChatList" class="list-group list-group-flush"></div>
      </div>

      <div id="userListArea" class="col-4">
        <h5 class="h5 text-info">
          users
          <span class="userNumber badge badge-info"></span>
        </h5>
        <ul id="userList" class="list-group list-group-flush"></ul>
      </div>
    </div>

  </div>

  <script type="text/javascript" src="js/chat.js"></script>
</body>

</html>